<!DOCTYPE html>
<html>
  <head>
    <title class="pagetitle">战网商城</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <%= render "common/navbar" %>
      <div style="position:fixed;width:100%;height:20px;line-height:20px;z-index:1001">
        <div style="position:relative;z-index:10000;margin:0 auto;width:40%;height:20px;line-height:20px">
          <%= render "common/flashes" %>
        </div>
      </div>
      <%= yield %>
      <%= render "common/footer" %>
    </div>
  </body>
</html>
